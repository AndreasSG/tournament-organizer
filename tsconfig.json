{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "target": "ES2019",
    "allowJs": true,
    "esModuleInterop": true,
    "declaration": true,
    "module": "commonJS",
    "sourceMap": true,
    "outDir": "./dist"
  },
  "typedocOptions": {
    "theme": "github-wiki",
    "out": "./docs",
    "excludeInternal": true,
    "entryPointStrategy": "expand"
  }
}
